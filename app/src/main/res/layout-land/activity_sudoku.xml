<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SudokuActivity">

    <Chronometer
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/gridTextPaint_Color"
        app:layout_constraintStart_toEndOf="@+id/grid_layout"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/grid_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#63F7F2E6"
        app:alignmentMode="alignBounds"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1.3:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.019"
        app:orientation="horizontal"
        app:useDefaultMargins="false"
        tools:context="com.cmpt276.lota.sudoku.SudokuActivity">

    </android.support.v7.widget.GridLayout>

    <Button
        android:id="@+id/switch_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/switch_language_button"
        android:textColor="?android:attr/colorForegroundInverse"
        app:layout_constraintStart_toEndOf="@+id/grid_layout"
        app:layout_constraintTop_toBottomOf="@+id/timer" />

    <Button
        android:id="@+id/check_result_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/check_result_button"
        android:textColor="?android:attr/colorForegroundInverse"
        app:layout_constraintStart_toEndOf="@+id/grid_layout"
        app:layout_constraintTop_toBottomOf="@+id/switch_button" />

    <Button
        android:id="@+id/listening_mode_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/listening_mode_button"
        android:textColor="?android:attr/colorForegroundInverse"
        app:layout_constraintStart_toEndOf="@+id/grid_layout"
        app:layout_constraintTop_toBottomOf="@+id/check_result_button" />
    <Button
        android:id="@+id/erase_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="erase"
        android:textColor="?android:attr/colorForegroundInverse"
        app:layout_constraintStart_toEndOf="@+id/grid_layout"
        app:layout_constraintTop_toBottomOf="@+id/listening_mode_button" />

    <Button
        android:id="@+id/word_list_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/words_lists_button"
        android:textColor="?android:attr/colorForegroundInverse"
        app:layout_constraintStart_toEndOf="@+id/grid_layout"
        app:layout_constraintTop_toBottomOf="@+id/erase_button" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/refresh_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_refresh"
        app:layout_constraintStart_toEndOf="@+id/grid_layout"
        app:layout_constraintTop_toBottomOf="@+id/word_list_button" />

    <ImageButton
        android:id="@+id/add_words_button"
        android:layout_width="44dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_add"
        app:layout_constraintStart_toEndOf="@+id/refresh_button"
        app:layout_constraintTop_toBottomOf="@+id/word_list_button" />

</android.support.constraint.ConstraintLayout>

